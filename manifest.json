{
    "manifest_version": 3,
    "name": "JSON Formatter",
    "version": "1.0",
    "default_locale": "en",
    "homepage_url": "https://stacktips.com,",
    "description": "Formats JSON responses automatically with customizable themes and JSONPath filtering support.",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite",
        "downloads"
    ],
    "author": {
        "email": "ask.nilan@gmail.com"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "JSONPath/index-browser-umd.min.cjs",
                "json-formatter.umd.js",
                "content.js"
            ],
            "css": [
                "json-formatter.css",
                "filter-styles.css",
                "themes/dark.css",
                "themes/light.css",
                "themes/github-dark.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["filter-help.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}