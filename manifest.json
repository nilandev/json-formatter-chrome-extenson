{
    "manifest_version": 3,
    "name": "JSON Formatter",
    "version": "1.2",
    "homepage_url": "https://stacktips.com",
    "description": "Formats JSON responses automatically with customizable themes and filter results using JSONPath expressions",
    "author":  {
        "email": "ask.nilan@gmail.com"
    },
    "permissions": [
        "storage",
        "clipboardWrite",
        "webRequest",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "src/jsonpath/index-browser-umd.min.cjs",
                "src/json-formatter.umd.js",
                "src/alert.js",
                "src/json-2-csv.js",
                "src/file-manager.js",
                "src/filter.js",
                "src/content.js"
            ],
            "css": [
                "styles/json-grid.css",
                "styles/json-formatter.css",
                "styles/filter-styles.css",
                "styles/themes/dark.css",
                "styles/themes/light.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["filter-help.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
