{
    "manifest_version": 3,
    "name": "JSON Formatter with Always-Visible Filter",
    "version": "1.4",
    "description": "Formats JSON responses with customizable themes and always-visible filtering",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "json-formatter.umd.js",
                "content.js"
            ],
            "css": [
                "json-formatter.css",
                "filter-styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}